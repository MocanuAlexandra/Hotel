<Application x:Class="Hotel.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Hotel.Views"
             xmlns:viewModels="clr-namespace:Hotel.ViewModels"
             xmlns:views="clr-namespace:Hotel.Views"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <!--providing view - viewModel correlation for the UI to know how to change
        views based on the currentViewModel from the MainWindowViewModel-->
        <DataTemplate DataType="{x:Type viewModels:StartVM}">
            <views:StartView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:SignInVM}">
            <views:SignInView/>
        </DataTemplate>
        <!--<DataTemplate DataType="{x:Type viewModels:EmployeeStartVM}">
            <views:EmployeeStartView/>
        </DataTemplate>-->
        <DataTemplate DataType="{x:Type viewModels:AdminStartVM}">
            <views:AdminStartWiew/>
        </DataTemplate>
        <!--<DataTemplate DataType="{x:Type viewModels:GuestStartVM}">
            <views:GuestStartView/>
        </DataTemplate>-->
        <DataTemplate DataType="{x:Type viewModels:SignUpVM}">
            <views:SignUpView/>
        </DataTemplate>
    </Application.Resources>
</Application>
